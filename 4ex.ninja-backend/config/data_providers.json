{
  "data_providers": {
    "oanda": {
      "name": "OANDA",
      "priority": 1,
      "enabled": true,
      "description": "Primary data provider for live and demo trading",
      "supported_timeframes": ["4H", "D", "W"],
      "supported_pairs": [
        "EUR_USD", "GBP_USD", "USD_JPY", "USD_CHF",
        "AUD_USD", "USD_CAD", "NZD_USD"
      ],
      "connection_settings": {
        "timeout_seconds": 30,
        "max_retries": 3,
        "retry_delay_seconds": 1,
        "rate_limit_per_second": 100
      },
      "data_quality": {
        "expected_spread_range": {
          "EUR_USD": [1.0, 2.5],
          "GBP_USD": [1.5, 3.0],
          "USD_JPY": [1.2, 2.8],
          "USD_CHF": [1.8, 3.2],
          "AUD_USD": [2.0, 3.5],
          "USD_CAD": [2.2, 3.8],
          "NZD_USD": [2.5, 4.0]
        },
        "max_gap_tolerance_percentage": 5.0,
        "outlier_detection_threshold": 3.0
      }
    },
    "alpha_vantage": {
      "name": "Alpha Vantage",
      "priority": 2,
      "enabled": true,
      "description": "Secondary provider for data validation",
      "supported_timeframes": ["D", "W"],
      "supported_pairs": [
        "EUR_USD", "GBP_USD", "USD_JPY", "USD_CHF",
        "AUD_USD", "USD_CAD", "NZD_USD"
      ],
      "connection_settings": {
        "timeout_seconds": 45,
        "max_retries": 2,
        "retry_delay_seconds": 2,
        "rate_limit_per_minute": 5,
        "rate_limit_delay_seconds": 12
      },
      "data_quality": {
        "expected_spread_range": {
          "EUR_USD": [1.5, 3.0],
          "GBP_USD": [2.0, 3.5],
          "USD_JPY": [1.8, 3.3],
          "USD_CHF": [2.2, 3.7],
          "AUD_USD": [2.5, 4.0],
          "USD_CAD": [2.8, 4.3],
          "NZD_USD": [3.0, 4.5]
        },
        "max_gap_tolerance_percentage": 10.0,
        "outlier_detection_threshold": 2.5
      },
      "api_settings": {
        "base_url": "https://www.alphavantage.co/query",
        "demo_mode_enabled": true,
        "functions": {
          "daily": "FX_DAILY",
          "weekly": "FX_WEEKLY"
        }
      }
    }
  },
  "swing_trading_settings": {
    "primary_timeframes": ["4H", "D", "W"],
    "major_pairs": [
      "EUR_USD", "GBP_USD", "USD_JPY", "USD_CHF",
      "AUD_USD", "USD_CAD", "NZD_USD"
    ],
    "cost_assumptions": {
      "default_spreads_pips": {
        "EUR_USD": 1.5,
        "GBP_USD": 2.0,
        "USD_JPY": 1.8,
        "USD_CHF": 2.2,
        "AUD_USD": 2.5,
        "USD_CAD": 2.8,
        "NZD_USD": 3.0
      },
      "default_swap_rates_pips_daily": {
        "EUR_USD": -0.5,
        "GBP_USD": -0.8,
        "USD_JPY": 0.3,
        "USD_CHF": 0.2,
        "AUD_USD": -0.6,
        "USD_CAD": 0.1,
        "NZD_USD": -0.7
      },
      "commission_percentage": 0.002,
      "slippage_assumptions": {
        "4H": 0.5,
        "D": 0.3,
        "W": 0.2
      }
    },
    "data_validation": {
      "quality_thresholds": {
        "max_gap_percentage": 10.0,
        "max_outlier_percentage": 5.0,
        "min_spread_consistency": 0.7,
        "max_price_gap_percentage": 3.0,
        "min_volume_consistency": 0.6
      },
      "validation_periods": {
        "4H": "30_days",
        "D": "90_days",
        "W": "1_year"
      },
      "cross_validation_enabled": true,
      "alert_levels": {
        "info": "log_only",
        "warning": "notify",
        "critical": "block_execution"
      }
    }
  },
  "monitoring": {
    "health_check_interval_seconds": 300,
    "data_refresh_interval_seconds": 3600,
    "alert_retention_days": 30,
    "performance_metrics": {
      "track_response_times": true,
      "track_error_rates": true,
      "track_data_freshness": true
    }
  },
  "storage": {
    "cache_enabled": true,
    "cache_duration_hours": {
      "4H": 1,
      "D": 6,
      "W": 24
    },
    "historical_data_retention": {
      "4H": "1_year",
      "D": "5_years",
      "W": "10_years"
    }
  }
}
